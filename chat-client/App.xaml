<Application x:Class="chat_client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Load default theme for design-time -->
                <ResourceDictionary Source="Themes/LightTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global tray icon declaration --> 
            <tb:TaskbarIcon x:Key="TrayIcon"
                            IconSource="/Resources/calc-icon.ico"
                            ToolTipText="Windows Calculator"
                            MenuActivation="RightClick"
                            TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick"
                            Visibility="Collapsed" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
