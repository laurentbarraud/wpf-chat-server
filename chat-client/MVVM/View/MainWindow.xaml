<Window x:Name="MainWindow1" x:Class="chat_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chat_client" 
        xmlns:vm="clr-namespace:chat_client.MVVM.ViewModel"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:helpers="clr-namespace:chat_client.Helpers"
        mc:Ignorable="d"
        Title="Chat client" 
        Height="491" 
        Width="759" 
        WindowStartupLocation="CenterScreen" 
        Icon="/Resources/chat-client-icon.ico" 
        TabIndex="12" 
        StateChanged="MainWindow1_StateChanged" 
        Closing="MainWindow1_Closing" 
        PreviewKeyDown="MainWindow1_PreviewKeyDown">

    <Window.Resources>

        <!--
        Switches the TextBox between editable IP input (TwoWay to IPAddressOfServer)
        and a read‑only “Connected” display (OneWay to CurrentIpDisplay). 
        Ensures UI state never overwrites the persisted IP. 
        CurrentIpDisplay requires Mode=OneWay to avoid TwoWay binding errors on a read‑only property.
        -->
        <Style x:Key="IPAddressTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="False"/>
            <Setter Property="Text" Value="{Binding IPAddressOfServer, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

            <Style.Triggers>
                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                    <Setter Property="IsReadOnly" Value="True"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding IsConnected}" Value="False">
                    <Setter Property="IsReadOnly" Value="False"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Slide animation for emoji popup -->
        <Storyboard x:Key="SlideInStoryboard">
            <DoubleAnimation Storyboard.TargetName="popupEmoji"
                             Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                             From="-200" To="0"
                             Duration="0:0:0.3"
                             AccelerationRatio="0.2"
                             DecelerationRatio="0.8" />
        </Storyboard>

        <!-- Slide-out animation for the emoji panel -->
        <Storyboard x:Key="SlideOutStoryboard">
            <DoubleAnimation Storyboard.TargetName="popupEmoji"
                             Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                             From="0" To="-480"
                             Duration="0:0:0.4"
                             AccelerationRatio="0.6"
                             DecelerationRatio="0.4" />
        </Storyboard>

        <!-- Lock drop animation -->
        <Storyboard x:Key="LockDropAnim">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                             From="200" To="0"
                             Duration="0:0:1.4"
                             AccelerationRatio="0.2"
                             DecelerationRatio="0.8"/>

            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                             From="1.3" To="1"
                             Duration="0:0:1.4"
                             AccelerationRatio="0.2"
                             DecelerationRatio="0.8"/>

            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                             From="1.3" To="1"
                             Duration="0:0:1.4"
                             AccelerationRatio="0.2"
                             DecelerationRatio="0.8"/>
        </Storyboard>

        <!-- Encryption icon style -->
        <Style x:Key="EncryptionStatusIconStyle" TargetType="Image">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>

            <Setter Property="Visibility"
                    Value="{Binding UseEncryption, Converter={StaticResource BoolToVis}}"/>

            <Setter Property="Source" Value="/Resources/syncing-keys.png"/>
            <Setter Property="ToolTip"
                    Value="{Binding GettingMissingKeysToolTip}"/>

            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEncryptionReady}" Value="True">
                    <Setter Property="Source" Value="/Resources/encrypted.png"/>
                    <Setter Property="ToolTip" Value="{Binding EncryptionEnabledToolTip}"/>

                    <DataTrigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource LockDropAnim}"/>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Global tray icon declaration -->
        <tb:TaskbarIcon x:Key="TrayIcon"
                IconSource="pack://application:,,,/Resources/calc-icon.ico"
                ToolTipText="Windows Calculator"
                MenuActivation="RightClick"
                TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick"
                Visibility="Collapsed" />

    </Window.Resources>

    <Grid x:Name="GrdMain" 
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          DataContext="{Binding}"
          Background="{DynamicResource BackgroundBrush}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="190"/>
            <ColumnDefinition Width="5"/>
            <!-- Splitter -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <Grid x:Name="GrdLeft" Grid.Column="0" HorizontalAlignment="Stretch">

            <!-- Layout -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 0 : Credentials block -->
            <Grid Grid.Row="0" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Username -->
                <Grid Grid.Row="0" 
                      HorizontalAlignment="Stretch">
                    <TextBox x:Name="TxtUsername"
                             IsReadOnly="{Binding IsConnected}"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Height="{Binding InputFieldHeight}"
                             FontSize="{Binding DisplayFontSize}" 
                             PreviewKeyDown="TxtUsername_PreviewKeyDown"
                             TextChanged="TxtUsername_TextChanged"
                             LostFocus="TxtUsername_LostFocus"
                             Panel.ZIndex="1"
                             MinHeight="25"
                             MinWidth="120"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Background="Transparent"
                             Foreground="{DynamicResource ForegroundBrush}"/>

                    <Image x:Name="imgUsernameWatermark"
                           Width="{Binding ActualWidth, ElementName=TxtUsername}"
                           Height="{Binding ActualHeight, ElementName=TxtUsername}"
                           Panel.ZIndex="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Source="/Resources/txtUsername_background_en.png"
                           Stretch="Uniform">
                    </Image>
                </Grid>

                <!-- IP Address -->
                <Grid Grid.Row="1" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="TxtIPAddress"
                             Style="{StaticResource IPAddressTextBoxStyle}"
                             IsReadOnly="{Binding IsConnected}"
                             Text="{Binding IPAddressOfServer}"
                             Height="{Binding InputFieldHeight}"
                             FontSize="{Binding DisplayFontSize}"
                             TextChanged="TxtIPAddress_TextChanged"
                             LostFocus="TxtIPAddress_LostFocus"
                             Grid.Column="0"
                             MinHeight="25"
                             MinWidth="120"
                             Background="Transparent"
                             Foreground="{DynamicResource ForegroundBrush}"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Panel.ZIndex="1"/>

                    <Image x:Name="imgIPAddressWatermark"
                           Width="{Binding ActualWidth, ElementName=TxtIPAddress}"
                           Height="{Binding ActualHeight, ElementName=TxtIPAddress}"
                           Grid.Column="0"
                           Panel.ZIndex="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Source="/Resources/txtIPAddress_background_en.png"
                           Stretch="Uniform"/>

                </Grid>

                <!-- Connect button -->
                <Button Grid.Row="2"
                        x:Name="CmdConnectDisconnect"
                        Content="{Binding ConnectButtonText}"
                        Command="{Binding ConnectDisconnectCommand}"
                        Height="{Binding InputFieldHeight}"
                        MinHeight="25"
                        FontSize="{Binding DisplayFontSize}" 
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        MinWidth="120"
                        Background="{DynamicResource PrimaryBrush}"
                        Foreground="{DynamicResource ForegroundBrush}"/>
            </Grid>

            <!-- Row 1 : Connected users list  -->
            <Border Grid.Row="1"
                    BorderBrush="#1A000000"

                    BorderThickness="1"
                    Background="Transparent">

                <ListView x:Name="lstConnectedUsers"
                          ItemsSource="{Binding Users}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Margin="0"
                          Background="{DynamicResource BackgroundBrush}"
                          Foreground="{DynamicResource ForegroundBrush}"
                          BorderThickness="0"
                          SnapsToDevicePixels="True">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Username}"
                                       FontSize="{Binding DataContext.DisplayFontSize,
                                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                       TextWrapping="NoWrap"
                                       VerticalAlignment="Center"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </Border>

            <!-- Row 2 : Bottom toolbar    -->
            <Grid x:Name="GridToolbar"
                  Grid.Row="2"
                  Height="34"
                  Margin="0,0,0,2"
                  VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Theme toggle -->
                <ToggleButton x:Name="ThemeToggle"
                              Grid.Column="0"
                              Width="60"
                              Height="32"
                              VerticalAlignment="Center"
                              Margin="5,0,10,0"
                              Command="{Binding ThemeToggleCommand}"
                              CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Mode=Self}}"
                              IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"
                              TabIndex="3">

                    <ToggleButton.Template>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Grid>

                                <!-- Background -->
                                <Border x:Name="SwitchBackground"
                                        CornerRadius="16"
                                        Background="{DynamicResource BackgroundBrush}"
                                        BorderBrush="{DynamicResource PrimaryBrush}"
                                        BorderThickness="1" />

                                <!-- Thumb -->
                                <Grid x:Name="ThumbContainer"
                                      Width="28" Height="28"
                                      VerticalAlignment="Center"
                                      Margin="2,2,30,2">

                                    <Ellipse Fill="{DynamicResource PrimaryBrush}" />

                                    <Image x:Name="SwitchIcon"
                                           Source="/Resources/sun.png"
                                           Width="18" Height="18"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                                </Grid>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <!-- Checked: move thumb to right -->
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="SwitchIcon" Property="Source" Value="/Resources/moon.png" />
                                    <Setter TargetName="ThumbContainer" Property="Margin" Value="30,2,2,2" />
                                </Trigger>

                                <!-- Unchecked: move thumb to left -->
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="SwitchIcon" Property="Source" Value="/Resources/sun.png" />
                                    <Setter TargetName="ThumbContainer" Property="Margin" Value="2,2,30,2" />
                                </Trigger>

                                <!-- Hover effect -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="SwitchBackground" Property="Background" Value="{DynamicResource PrimaryBrush}" />
                                </Trigger>

                                <!-- Disabled state -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="SwitchBackground" Property="Opacity" Value="0.4" />
                                    <Setter TargetName="ThumbContainer" Property="Opacity" Value="0.4" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>

                <!-- Settings button (right side, before font size button) -->
                <Button x:Name="CmdSettings"
                            Grid.Column="1"
                            Width="32"
                            Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            VerticalAlignment="Center"
                            Margin="5,0,5,0"
                            Click="CmdSettings_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Image Source="/Resources/settings.png"
                               Stretch="Uniform"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Button>

                <!-- Spacer -->
                <Border Grid.Column="2"/>
            </Grid>

        </Grid>

        <GridSplitter Grid.Column="1"
              Width="4"
              Background="Transparent"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              ShowsPreview="True"
              ResizeBehavior="PreviousAndNext"/>

        <Grid x:Name="GrdRight" 
              Grid.Column="2" 
              Background="{DynamicResource BackgroundBrush}" 
              SizeChanged="GrdRight_SizeChanged">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <!-- Messages -->
                <RowDefinition Height="Auto" />
                <!-- Connected users -->
                <RowDefinition Height="Auto" />
                <!-- Input bar -->
            </Grid.RowDefinitions>

            <!-- Row 0 : Received messages -->
            <ListView x:Name="lstReceivedMessages"
                      Grid.Row="0"
                      ItemsSource="{Binding Messages}"
                      Background="{DynamicResource BackgroundBrush}"
                      Foreground="{DynamicResource ForegroundBrush}"
                      VerticalAlignment="Stretch"
                      Padding="0"
                      BorderThickness="0"
                      TabIndex="6">

                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}" />
                        <Setter Property="Margin" Value="0,0,0,1" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   TextWrapping="Wrap"
                                   FontFamily="Segoe UI Emoji"
                                   FontSize="{Binding DataContext.DisplayFontSize, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Row 1 : Emoji bar         -->
            <Grid x:Name="GrdEmoji"
                  Grid.Row="1"
                  Height="Auto"
                  HorizontalAlignment="Left"
                  Visibility="{Binding IsConnected, Converter={StaticResource BoolToVis}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <!-- Emoji toggle button -->
                <Button x:Name="CmdEmojiPanel"
                        Height="{Binding ActualHeight, ElementName=GrdEmoji}"
                        Width="{Binding ActualHeight, ElementName=GrdEmoji}"
                        Margin="2,0,0,0"
                        Click="CmdEmojiPanel_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        ToolTip="Emoji bar"
                        TabIndex="6"
>
                    <Image x:Name="ImgEmojiPanel"
                            Source="/Resources/right-arrow.png"
                            Stretch="Uniform"
                            Width="14" />
                </Button>

                <!-- Encryption icon -->
                <Image x:Name="imgEncryptionStatus"
                        Width="15"
                        Height="15"
                        VerticalAlignment="Center"
                        Style="{StaticResource EncryptionStatusIconStyle}" />

                <!-- Emoji popup -->
                <Popup x:Name="popupEmoji"
                       Placement="Top"
                       PlacementTarget="{Binding ElementName=TxtMessageInput}"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Slide"
                       HorizontalOffset="0"
                       VerticalOffset="-5">

                    <Popup.RenderTransform>
                        <TranslateTransform X="0" />
                    </Popup.RenderTransform>

                    <Border DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                            Background="{DynamicResource BackgroundBrush}"
                            BorderBrush="{DynamicResource PrimaryBrush}"
                            BorderThickness="1"
                            Padding="4"
                            Height="{Binding EmojiPopupHeight}"
                            Width="{Binding EmojiPopupWidth}"
                            HorizontalAlignment="Center">

                        <!-- Emoji panel layout -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Left arrow -->
                            <Button x:Name="CmdScrollLeft"
                                    Grid.Column="0"
                                    Width="20"
                                    Height="20"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    MouseEnter="CmdScrollLeft_MouseEnter"
                                    MouseLeave="CmdScrollLeft_MouseLeave"
                                    ToolTip="Scroll left">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Opacity" Value="0.6"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Setter Property="Background" Value="#22000000"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Image Source="/Resources/left-arrow.png" Stretch="Uniform"/>
                            </Button>

                            <!-- Emoji list -->
                            <ScrollViewer x:Name="emojiScrollViewer"
                                          Grid.Column="1"
                                          VerticalAlignment="Center"
                                          MinHeight="48"
                                          Margin="4,0,0,0"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Disabled"
                                          CanContentScroll="True">
                                <ItemsControl x:Name="emojiItems"
                                                ItemsSource="{Binding EmojiList}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Width="{Binding DataContext.EmojiButtonSize, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                    Height="{Binding DataContext.EmojiButtonSize, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                    Margin="2,0,0,0"
                                                    Padding="0"
                                                    Background="{DynamicResource PrimaryBrush}"
                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                    BorderThickness="0"
                                                    VerticalAlignment="Center"
                                                    Click="EmojiButton_Click">

                                                <Button.Template>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4"
                                                                VerticalAlignment="Stretch"
                                                                HorizontalAlignment="Stretch">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>

                                                <TextBlock Text="{Binding}"
                                                           FontSize="{Binding DataContext.EmojiFontSize, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Right arrow -->
                            <Button x:Name="CmdScrollRight"
                                    Grid.Column="2"
                                    Width="20"
                                    Height="20"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    MouseEnter="CmdScrollRight_MouseEnter"
                                    MouseLeave="CmdScrollRight_MouseLeave"
                                    ToolTip="Scroll right">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Opacity" Value="0.6"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Setter Property="Background" Value="#22000000"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Image Source="/Resources/right-arrow.png" Stretch="Uniform"/>
                            </Button>
                        </Grid>
                    </Border>
                </Popup>
            </Grid>

            <!-- Row 2 : Input bar -->
            <Grid x:Name="GrdMessageInput"
                  Grid.Row="2"
                  Height="Auto"
                  MinHeight="32"
                  MinWidth="50"
                  VerticalAlignment="Center"
                  Visibility="{Binding IsConnected, Converter={StaticResource BoolToVis}}"
                  Margin="0,1,0,-1">

                <!-- One column -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Input border container -->
                <Border x:Name="BrdMessageInputField"
                        Grid.Column="0"
                        MinWidth="50"
                        Width="{Binding MessageInputFieldWidth}"
                        d:Width="400"
                        HorizontalAlignment="Left"
                        MinHeight="34"
                        Height="{Binding MessageInputFieldHeight}"
                        Margin="{Binding MessageInputFieldMargin}"
                        VerticalAlignment="Center"
                        BorderBrush="{DynamicResource PrimaryBrush}"
                        BorderThickness="1">

                    <!-- One internal column -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Text input -->
                        <TextBox x:Name="TxtMessageInput"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Width="Auto"
                                 Height="{Binding MessageInputFieldHeight}"
                                 Text="{Binding MessageToSend, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="{Binding DisplayFontSize}"
                                 Background="{DynamicResource BackgroundBrush}"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"                 
                                 PreviewKeyDown="TxtMessageInput_PreviewKeyDown"
                                 BorderThickness="0"
                                 MaxLines="1000" Margin="0,0,40,0"/>

                        <!-- Send button (in the same column, right aligned) -->
                        <Button x:Name="CmdSend"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Click="CmdSend_Click"
                                Width="40"
                                Height="32"
                                Background="Transparent"
                                BorderThickness="0">
                            <Image Source="/Resources/send.png"
                                   Width="18" Height="18"/>
                        </Button>

                    </Grid>
                </Border>
            </Grid>

        </Grid>
    </Grid>
</Window>
