<Window x:Name="MainWindow1" x:Class="chat_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chat_client" 
        xmlns:vm="clr-namespace:chat_client.MVVM.ViewModel"
        xmlns:helpers="clr-namespace:chat_client.Helpers"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="491" 
        Width="759" 
        WindowStartupLocation="CenterScreen" 
        Loaded="MainWindow_Loaded" 
        Icon="/Resources/chat-client-icon.ico" 
        TabIndex="12" 
        StateChanged="MainWindow1_StateChanged" 
        Closing="MainWindow1_Closing" 
        PreviewKeyDown="MainWindow1_PreviewKeyDown">

    <Window.Resources>

        <!--
        Switches the TextBox between editable IP input (TwoWay to IPAddressOfServer)
        and a read‑only “Connected” display (OneWay to CurrentIpDisplay). 
        Ensures UI state never overwrites the persisted IP. 
        CurrentIpDisplay requires Mode=OneWay to avoid TwoWay binding errors on a read‑only property.
        -->
        <Style x:Key="IpAddressTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsEnabled" Value="True"/>
            <Setter Property="Text" Value="{Binding IPAddressOfServer, UpdateSourceTrigger=PropertyChanged}"/>

            <Style.Triggers>

                <!-- When connected -->
                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="Text" 
                            Value="{Binding CurrentIpDisplay, Mode=OneWay}"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </DataTrigger>

                <!-- When disconnected -->
                <DataTrigger Binding="{Binding IsConnected}" Value="False">
                    <Setter Property="IsEnabled" Value="True"/>
                    <Setter Property="Text" 
                            Value="{Binding IPAddressOfServer, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </DataTrigger>
                
            </Style.Triggers>
        </Style>

        <!-- Slide animation for emoji popup -->
        <Storyboard x:Key="SlideInStoryboard">
            <DoubleAnimation Storyboard.TargetName="popupEmoji"
                             Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                             From="-200" To="0"
                             Duration="0:0:0.3"
                             AccelerationRatio="0.2"
                             DecelerationRatio="0.8" />
        </Storyboard>

        <!-- Slide-out animation for the emoji panel -->
        <Storyboard x:Key="SlideOutStoryboard">
            <DoubleAnimation Storyboard.TargetName="popupEmoji"
                             Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                             From="0" To="-480"
                             Duration="0:0:0.4"
                             AccelerationRatio="0.6"
                             DecelerationRatio="0.4" />
        </Storyboard>

        <!-- Lock drop animation -->
        <Storyboard x:Key="LockDropAnim">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                             From="200" To="0"
                             Duration="0:0:1.4"
                             AccelerationRatio="0.2"
                             DecelerationRatio="0.8"/>

            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                             From="1.3" To="1"
                             Duration="0:0:1.4"
                             AccelerationRatio="0.2"
                             DecelerationRatio="0.8"/>

            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                             From="1.3" To="1"
                             Duration="0:0:1.4"
                             AccelerationRatio="0.2"
                             DecelerationRatio="0.8"/>
        </Storyboard>

        <!-- Bool → Visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Encryption icon style -->
        <Style x:Key="EncryptionStatusIconStyle" TargetType="Image">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>

            <Setter Property="Visibility"
                    Value="{Binding UseEncryption, Converter={StaticResource BoolToVis}}"/>

            <Setter Property="Source" Value="/Resources/syncing-keys.png"/>
            <Setter Property="ToolTip"
                    Value="{Binding GettingMissingKeysTooltip}"/>

            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEncryptionReady}" Value="True">
                    <Setter Property="Source" Value="/Resources/encrypted.png"/>
                    <Setter Property="ToolTip" Value="{Binding EncryptionEnabledTooltip}"/>

                    <DataTrigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource LockDropAnim}"/>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Font size converter -->
        <helpers:FontSizeToPercentageConverter x:Key="FontSizeToPercentageConverter" />

    </Window.Resources>

    <Grid x:Name="GrdMain" Background="{DynamicResource BackgroundBrush}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <Grid x:Name="GrdLeft" Grid.Column="0">

            <!-- Layout -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ========================= -->
            <!-- Row 0 : Credentials block -->
            <!-- ========================= -->
            <StackPanel Grid.Row="0" Orientation="Vertical">

                <!-- Username field -->
                <Grid Height="25" Margin="0">
                    <TextBox x:Name="TxtUsername"
                         IsEnabled="{Binding IsNotConnected}"
                         Background="Transparent"
                         Foreground="{DynamicResource ForegroundBrush}" 
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         TextChanged="TxtUsername_TextChanged"
                         PreviewKeyDown="TxtUsername_PreviewKeyDown"
                         FontSize="14"
                         MaxLines="1"
                         MaxLength="50"
                         TabIndex="0"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Left"
                         Width="182"
                         Height="25"
                         Panel.ZIndex="1"/>
                    <Image x:Name="imgUsernameWatermark"
                       Stretch="Fill"
                       IsHitTestVisible="False"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Width="{Binding ActualWidth, ElementName=TxtUsername}"
                       Height="{Binding ActualHeight, ElementName=TxtUsername}" />
                </Grid>

                <!-- IP address field -->
                <!-- When disconnected: editable, bound to IPAddressOfServer (TwoWay).
                        - When connected: disabled and visually replaced by CurrentIpDisplay.
                        - IPAddressOfServer is only a temporary UI buffer; the real persisted value
                          is Settings.Default.LastIPAddressUsed, used as the single source of truth.
                -->
                <Grid Height="25" Margin="0">
                    <TextBox x:Name="TxtIPAddress"
                             Style="{StaticResource IpAddressTextBoxStyle}"
                             Background="Transparent"
                             Foreground="{DynamicResource ForegroundBrush}"
                             TextChanged="TxtIPAddress_TextChanged"
                             FontSize="14"
                             MaxLines="1"
                             MaxLength="15"
                             TabIndex="1"
                             VerticalAlignment="Top"
                             HorizontalAlignment="Left"
                             Width="182"
                             Height="25"
                             Panel.ZIndex="1">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter"
                                        Command="{Binding DataContext.ConnectDisconnectCommand,
                                                 RelativeSource={RelativeSource Mode=FindAncestor,
                                                 AncestorType={x:Type Window}}}" />
                        </TextBox.InputBindings>
                    </TextBox>

                    <Image x:Name="imgIPAddressWatermark"
                           IsHitTestVisible="False"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Width="{Binding ActualWidth, ElementName=TxtIPAddress}"
                           Height="{Binding ActualHeight, ElementName=TxtIPAddress}" />
                </Grid>
                
                <!-- Connect / Disconnect button -->
                <Button x:Name="CmdConnectDisconnect"
                    Height="25"
                    Content="{Binding ConnectButtonText}"
                    Command="{Binding ConnectDisconnectCommand}" 
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource ForegroundBrush}"
                    TabIndex="2"
                    Margin="0"/>
            </StackPanel>

            <!-- ===================================== -->
            <!-- Row 1 : Connected users list (fills)  -->
            <!-- ===================================== -->
            <Border Grid.Row="1"
                    BorderBrush="#1A000000"

                    BorderThickness="1"
                    Background="Transparent">

                <ListView x:Name="lstConnectedUsers"
                          ItemsSource="{Binding Users}"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Stretch"
                          Width="{Binding ConnectedUsersListWidth}"
                          Margin="0"
                          Background="{DynamicResource BackgroundBrush}"
                          Foreground="{DynamicResource ForegroundBrush}"
                          BorderThickness="0"
                          SnapsToDevicePixels="True">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Username}"
                                       FontSize="{Binding DataContext.ConversationsAndConnectedUsersTextSize,
                                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                       TextWrapping="NoWrap"
                                       VerticalAlignment="Center"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </Border>

            <!-- ========================= -->
            <!-- Row 2 : Bottom toolbar    -->
            <!-- ========================= -->
            <DockPanel x:Name="SpnToolbar"
                           Grid.Row="2"
                           Height="34"
                           Margin="0,0,0,2"
                           LastChildFill="False"
                           VerticalAlignment="Bottom">

                <!-- Theme toggle -->
                <ToggleButton x:Name="ThemeToggle"
                  DockPanel.Dock="Left"
                  Width="60"
                  Height="32"
                  VerticalAlignment="Center"
                  Margin="5,0,10,0"
                  Command="{Binding ThemeToggleCommand}"
                  CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Mode=Self}}"
                  IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"
                  TabIndex="3">

                    <ToggleButton.Template>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Grid>

                                <!-- Background -->
                                <Border x:Name="SwitchBackground"
                            CornerRadius="16"
                            Background="{DynamicResource BackgroundBrush}"
                            BorderBrush="{DynamicResource PrimaryBrush}"
                            BorderThickness="1" />

                                <!-- Thumb -->
                                <Grid x:Name="ThumbContainer"
                          Width="28" Height="28"
                          VerticalAlignment="Center"
                          Margin="2,2,30,2">

                                    <Ellipse Fill="{DynamicResource PrimaryBrush}" />

                                    <Image x:Name="SwitchIcon"
                               Source="/Resources/sun.png"
                               Width="18" Height="18"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                                </Grid>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <!-- Checked: move thumb to right -->
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="SwitchIcon" Property="Source" Value="/Resources/moon.png" />
                                    <Setter TargetName="ThumbContainer" Property="Margin" Value="30,2,2,2" />
                                </Trigger>

                                <!-- Unchecked: move thumb to left -->
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="SwitchIcon" Property="Source" Value="/Resources/sun.png" />
                                    <Setter TargetName="ThumbContainer" Property="Margin" Value="2,2,30,2" />
                                </Trigger>

                                <!-- Hover effect -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="SwitchBackground" Property="Background" Value="{DynamicResource PrimaryBrush}" />
                                </Trigger>

                                <!-- Disabled state -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="SwitchBackground" Property="Opacity" Value="0.4" />
                                    <Setter TargetName="ThumbContainer" Property="Opacity" Value="0.4" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>

                <!-- Settings button (right side, before font size button) -->
                <Button x:Name="CmdSettings"
                            DockPanel.Dock="Left"
                            Width="32"
                            Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            VerticalAlignment="Center"
                            Margin="5,0,5,0"
                            Click="CmdSettings_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Image Source="/Resources/settings.png"
                               Stretch="Uniform"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Button>
            </DockPanel>
        </Grid>

        <Grid x:Name="GrdRight" 
              Grid.Column="1" 
              Background="{DynamicResource BackgroundBrush}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <!-- Messages -->
                <RowDefinition Height="Auto" />
                <!-- Connected users -->
                <RowDefinition Height="Auto" />
                <!-- Input bar -->
            </Grid.RowDefinitions>

            <!-- ========================= -->
            <!-- Row 0 : Received messages -->
            <!-- ========================= -->

            <!-- ========================= -->
            <!-- Row 1 : Emoji bar         -->
            <!-- ========================= -->
            <!-- ========================= -->
            <ListView x:Name="lstReceivedMessages"
                      Grid.Row="0"
                      ItemsSource="{Binding Messages}"
                      Background="{DynamicResource BackgroundBrush}"
                      Foreground="{DynamicResource ForegroundBrush}"
                      VerticalAlignment="Stretch"
                      Padding="0"
                      BorderThickness="0"
                      TabIndex="6">

                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}" />
                        <Setter Property="Margin" Value="0,0,0,1" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   TextWrapping="Wrap"
                                   FontFamily="Segoe UI Emoji"
                                   FontSize="{Binding DataContext.ConversationsAndConnectedUsersTextSize, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- ========================= -->
            <StackPanel x:Name="SpnEmojiPanel"
                        Grid.Row="1"
                        Orientation="Horizontal"
                        Height="Auto"
                        Visibility="{Binding AreChatControlsVisible, Converter={StaticResource BoolToVis}}">

                <!-- Emoji toggle button -->
                <Button x:Name="CmdEmojiPanel"
                        Height="{Binding ActualHeight, ElementName=SpnEmojiPanel}"
                        Width="{Binding ActualHeight, ElementName=SpnEmojiPanel}"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        ToolTip="Emoji bar"
                        TabIndex="6"
                        Click="CmdEmojiPanel_Click"
                        Margin="4,0,4,0">
                    <Image x:Name="ImgEmojiPanel"
                            Source="/Resources/right-arrow.png"
                            Stretch="Uniform"
                            Width="14" />
                </Button>

                <!-- Encryption icon -->
                <Image x:Name="imgEncryptionStatus"
                        Width="15"
                        Height="15"
                        VerticalAlignment="Center"
                        Style="{StaticResource EncryptionStatusIconStyle}" />

                <!-- Emoji popup -->
                <Popup x:Name="popupEmoji"
                       Placement="Custom"
                       PlacementTarget="{Binding ElementName=TxtMessageInput}"
                       CustomPopupPlacementCallback="OnPopupPlacement"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Slide"
                       Closed="popupEmoji_Closed">

                    <Popup.RenderTransform>
                        <TranslateTransform X="0" />
                    </Popup.RenderTransform>

                    <Border DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                            Background="{DynamicResource BackgroundBrush}"
                            BorderBrush="{DynamicResource PrimaryBrush}"
                            BorderThickness="1"
                            Padding="4"
                            Height="{Binding EmojiPopupHeight}"
                            Width="{Binding BrdMessageInputWidth}">

                        <!-- Emoji panel layout -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Left arrow -->
                            <Button x:Name="CmdScrollLeft"
                                    Grid.Column="0"
                                    Width="20"
                                    Height="20"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    MouseEnter="CmdScrollLeft_MouseEnter"
                                    MouseLeave="CmdScrollLeft_MouseLeave"
                                    ToolTip="Scroll left">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Opacity" Value="0.6"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Setter Property="Background" Value="#22000000"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Image Source="/Resources/left-arrow.png" Stretch="Uniform"/>
                            </Button>

                            <!-- Emoji list -->
                            <ScrollViewer x:Name="emojiScrollViewer"
                                          Grid.Column="1"
                                          VerticalAlignment="Center"
                                          MinHeight="48"
                                          Margin="4,0"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Disabled"
                                          CanContentScroll="True">
                                <ItemsControl x:Name="emojiItems"
                                                ItemsSource="{Binding EmojiList}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Width="{Binding DataContext.EmojiButtonSize, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                    Height="{Binding DataContext.EmojiButtonSize, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                    Margin="2"
                                                    Padding="0"
                                                    Background="{DynamicResource PrimaryBrush}"
                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                    BorderThickness="0"
                                                    VerticalAlignment="Center"
                                                    Click="EmojiButton_Click">

                                                <Button.Template>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4"
                                                                VerticalAlignment="Stretch"
                                                                HorizontalAlignment="Stretch">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>

                                                <TextBlock Text="{Binding}"
                                                           FontSize="{Binding DataContext.EmojiFontSize, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Right arrow -->
                            <Button x:Name="CmdScrollRight"
                                    Grid.Column="2"
                                    Width="20"
                                    Height="20"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    MouseEnter="CmdScrollRight_MouseEnter"
                                    MouseLeave="CmdScrollRight_MouseLeave"
                                    ToolTip="Scroll right">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Opacity" Value="0.6"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Setter Property="Background" Value="#22000000"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Image Source="/Resources/right-arrow.png" Stretch="Uniform"/>
                            </Button>
                        </Grid>
                    </Border>
                </Popup>
            </StackPanel>

            <!-- Row 2 : Input bar -->
            <Grid x:Name="GrdDown"
                  Grid.Row="2"
                  Height="Auto"
                  Visibility="{Binding AreChatControlsVisible, Converter={StaticResource BoolToVis}}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Input container -->
                <Border x:Name="BrdMessageInput"
                        Grid.Column="0"
                        Width="{Binding BrdMessageInputWidth}"
                        Height="{Binding MessageInputHeight}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,2"
                        BorderBrush="{DynamicResource PrimaryBrush}"
                        BorderThickness="1">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Text input -->
                        <TextBox x:Name="TxtMessageInput"
                                 Grid.Column="0"
                                 Width="546" 
                                 Height="{Binding MessageInputHeight}"
                                 HorizontalAlignment="Left"  
                                 VerticalContentAlignment="Center"
                                 Text="{Binding MessageToSend, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="{Binding ConversationsAndConnectedUsersTextSize}"
                                 PreviewKeyDown="TxtMessageInput_PreviewKeyDown"
                                 BorderThickness="0" 
                                 MaxLines="1000"/>

                        <!-- Send button -->
                        <Button x:Name="CmdSend"
                                Grid.Column="1"
                                Click="CmdSend_Click"
                                Width="40"
                                Height="32"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalAlignment="Right"
                                VerticalContentAlignment="Center">
                            <Image Source="/Resources/send.png"
                                   Width="18" Height="18"/>
                        </Button>

                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
