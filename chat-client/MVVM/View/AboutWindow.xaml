<Window x:Class="chat_client.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        Width="640" Height="420"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="Transparent" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <Grid>
        <!-- Grid background: a smooth diagonal slash-gradient
        from left (#F8F7FB) to right (#000C23) -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <!-- Far left: almost-white -->
                <GradientStop Color="#F4F5FF" Offset="0.1"/>
                <!-- Far right: deep navy -->
                <GradientStop Color="#040F25" Offset="0.5"/>
                <GradientStop Color="Black" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>


        <!-- Top content area -->
        <Grid Margin="0,0,0,60">
            <!-- Wireframe overlay docked to bottom -->
            <Image Source="/Resources/AboutWireframeOverlay.png"
                   Width="550" Height="360"
                   Opacity="0.7"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,-30"/>

            <!-- Title -->
            <TextBlock Text="WPF Chat Client"
                   FontSize="34"                
                   FontWeight="Normal"
                   Foreground="Black"
                   Margin="24,20,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>

            <!-- Licence info block -->
            <TextBlock x:Name="LicenceInfo1Text"
                       FontSize="12"
                       Foreground="WhiteSmoke"
                       Margin="80,80,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       TextWrapping="Wrap"/>

            <TextBlock x:Name="LicenceInfo2Text"
                       FontSize="12"
                       Foreground="WhiteSmoke"
                       Margin="80,110,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       TextWrapping="Wrap"/>
        </Grid>

        <!-- Bottom panel -->
        <DockPanel VerticalAlignment="Bottom"
           Height="42"
           Background="Black"
           LastChildFill="False">

            <!-- Horizontal container for CLI link, spacer, licence text, and OK button -->
            <StackPanel Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="20,0,0,0"
                DockPanel.Dock="Left">

                <!-- Localized command-line link -->
                <TextBlock x:Name="CliTextBlock"
                   FontSize="14"
                   Foreground="WhiteSmoke"
                   Background="Transparent"
                   Style="{StaticResource InteractiveTextBlockStyle}"
                   Cursor="Hand"
                   MouseDown="CliTextBlock_MouseDown"
                   TextWrapping="Wrap"
                   VerticalAlignment="Center" />

                <!-- Spacer between CLI link and licence text -->
                <Rectangle Width="60" Fill="Transparent" />

                <!-- Licence and version text -->
                <TextBlock x:Name="LicenceFinalText"
                   FontSize="12"
                   Foreground="WhiteSmoke"
                   VerticalAlignment="Center"
                   TextWrapping="NoWrap" />
            </StackPanel>

            <!-- OK button aligned to the right -->
            <Button x:Name="CmdOk"
            Content="OK"
            Width="90"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,20,0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Click="CmdOk_Click"
            DockPanel.Dock="Right"
            IsDefault="True"
            IsCancel="True" />
        </DockPanel>
    </Grid>
</Window>


