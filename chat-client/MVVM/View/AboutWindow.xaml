<Window x:Class="chat_client.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        Width="640" Height="420"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="Transparent" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <Grid>
        <!-- Background gradient: bright white to desaturated blue to near-black -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFFFFF" Offset="0"/>
                <!-- Top-left: bright white -->
                <GradientStop Color="#B0B8C4" Offset="0.4"/>
                <!-- Center: desaturated light blue -->
                <GradientStop Color="#10141C" Offset="1"/>
                <!-- Bottom-right: near-black blue -->
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Top content area -->
        <Grid Margin="0,0,0,60">
            <!-- Wireframe overlay docked to bottom -->
            <Image Source="/Resources/AboutWireframeOverlay.png"
                   Width="550" Height="360"
                   Opacity="0.7"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,-30"/>

            <!-- Title -->
            <TextBlock Text="WPF Chat Client"
                   FontSize="34"                
                   FontWeight="Normal"
                   Foreground="Black"
                   Margin="20,30,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>

            <!-- Licence info block -->
            <TextBlock x:Name="LicenceInfo1Text"
                       FontSize="12"
                       Foreground="Black"
                       Margin="20,80,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       TextWrapping="Wrap"/>

            <TextBlock x:Name="LicenceInfo2Text"
                       FontSize="12"
                       Foreground="Black"
                       Margin="20,130,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       TextWrapping="Wrap"/>
            
            <!-- Licence final label in top panel, bottom-right corner -->
            <TextBlock x:Name="LicenceFinalText"
                       FontSize="12"
                       Background="Black"
                       Foreground="#7CCBD3"
                       Margin="0,0,0,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       TextWrapping="Wrap"/>
        </Grid>

        <!-- Bottom panel -->
        <DockPanel VerticalAlignment="Bottom"
           Height="60"
           Background="#000000"
           LastChildFill="False">

            <!-- Localized command-line link -->
            <TextBlock x:Name="CliTextBlock"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="WhiteSmoke"
                       Background="Transparent"
                       Margin="20,0,0,0"
                       Style="{StaticResource InteractiveTextBlockStyle}"
                       Cursor="Hand"
                       MouseDown="CliTextBlock_MouseDown"
                       TextWrapping="Wrap" />

            <!-- Spacer -->
            <DockPanel DockPanel.Dock="Left" Width="Auto"/>

            <!-- OK button -->
            <Button x:Name="cmdOk"
            Content="OK"
            Width="90"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,20,0"
            Click="cmdOk_Click"
            DockPanel.Dock="Right"
            IsDefault="True"
            IsCancel="True" />
        </DockPanel>

    </Grid>
</Window>


