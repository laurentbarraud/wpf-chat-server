<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
       
    <!-- Almost white background -->
    <Color x:Key="BackgroundColor">#FFFDFDFD</Color>
    <!-- Soft black text foreground -->
    <Color x:Key="ForegroundColor">#FF1E1E1E</Color>
    <!-- Light grey buttons -->
    <Color x:Key="PrimaryColor">#FFD3D3D3</Color>
    <!-- Disabled buttons -->
    <Color x:Key="DisabledButtonColor">#333333</Color>
    <!-- Sky blue accent -->
    <Color x:Key="AccentColor">#FFC9DEF5</Color>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="DisabledButtonBrush" Color="{StaticResource DisabledButtonColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
   
</ResourceDictionary>
