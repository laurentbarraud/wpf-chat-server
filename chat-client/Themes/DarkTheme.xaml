<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Very dark background -->
    <Color x:Key="BackgroundColor">#FF121212</Color>
    <!-- White text foreground -->
    <Color x:Key="ForegroundColor">#FFFFFFFF</Color>
    <!-- Web blue buttons -->
    <Color x:Key="PrimaryColor">#FF2196F3</Color>
    <!-- Disabled buttons -->
    <Color x:Key="DisabledButtonColor">#FF1E1E1E</Color>
    <!-- Sky blue accent -->
    <Color x:Key="AccentColor">#FFC9DEF5</Color>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="DisabledButtonBrush" Color="{StaticResource DisabledButtonColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <ImageBrush x:Key="txtUsername_background" ImageSource="/Resources/txtUsername_background_dark.gif" />
    <ImageBrush x:Key="txtIPAddress_background" ImageSource="/Resources/txtIPAddress_background_dark.gif" />
</ResourceDictionary>
