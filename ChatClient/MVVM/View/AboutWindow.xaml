<Window x:Class="ChatClient.MVVM.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient.MVVM.View"
        xmlns:vm="clr-namespace:ChatClient.MVVM.ViewModel"
        xmlns:conv="clr-namespace:ChatClient.Converters"
        mc:Ignorable="d"
        Title="About this software"
        Width="544"
        Height="350"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <!-- Common style for TextBlocks related to night mode -->
        <Style x:Key="NightModeLicenceStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="1"/>
            <Setter Property="Visibility"
                    Value="{Binding IsNightMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Style>

    </Window.Resources>

    <!-- Root grid with two rows -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="42" />
        </Grid.RowDefinitions>

        <!-- Atmospheric overlay (does not affect layout) -->
            <Canvas x:Name="AtmosphericCanvas"
                    Grid.RowSpan="2"
                    Background="Transparent"
                    IsHitTestVisible="False"
                    Panel.ZIndex="3"/>

        <!-- Top content area -->
        <Grid Grid.Row="0" Panel.ZIndex="2" DataContext="{Binding}">

            <!-- Diagonal gradient background -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop x:Name="GS_Light" Color="#F9F9FF" Offset="0.0"/>
                    <GradientStop x:Name="GS_Mid" Color="#001F44" Offset="0.5"/>
                    <GradientStop x:Name="GS_Dark" Color="Black" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Wireframe overlay -->
            <Image Source="/Resources/AboutWireframeOverlay.png"
                   Width="396"
                   Height="259"
                   Opacity="0.6"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,58,0,0"/>

            <!-- Hotspot button -->
            <Button x:Name="HotspotButton"
                    Width="11"
                    Height="11"
                    d:Width="0"
                    d:Height="0"
                    d:Margin="0"
                    Click="HotspotButton_Click"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Panel.ZIndex="50" 
                    Margin="0,102,85,0" 
                    TabIndex="3">
                
            </Button>

            <!-- Reset button -->
            <Button x:Name="ResetButton"
                    Width="11"
                    Height="11"
                    d:Width="0"
                    d:Height="0"
                    d:Margin="0"
                    MouseDoubleClick="ResetButton_MouseDoubleClick" 
                    Focusable="False"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Panel.ZIndex="49" 
                    Margin="0,125,85,0">
                
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Button.Template>
            
            </Button>

            <!-- Title -->
            <TextBlock x:Name="AppTitle"
                       Text="Chat Client"
                       FontSize="34"
                       FontWeight="Normal"
                       Foreground="Black"
                       Margin="26,22,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" Panel.ZIndex="100"/>

            <TextBlock x:Name="LicenceInfoText"
                       Text="{Binding LicenceInfo}"
                       Foreground="WhiteSmoke"
                       FontSize="10"
                       TextWrapping="Wrap"
                       LineHeight="1"
                       Visibility="{Binding IsNightMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                       Margin="30,90,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Width="231"
                       Height="28"
                       TextAlignment="Right"/>

            <!-- Licence info resources block -->
            <TextBlock x:Name="LicenceInfoResourcesText"
                       Text="{Binding LicenceInfoResources}"
                       Foreground="WhiteSmoke"
                       FontSize="10"
                       TextWrapping="Wrap"
                       LineHeight="1"
                       Visibility="{Binding IsNightMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                       Margin="43,0,0,2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"
                       Width="388"/>

        </Grid>

        <!-- Bottom panel -->
        <DockPanel Grid.Row="1"
                   Background="Black"
                   LastChildFill="False"
                   VerticalAlignment="Stretch">

            <Label x:Name="CliArgumentsLabel"
                   FontSize="13"
                   Foreground="WhiteSmoke"
                   Background="Transparent"
                   Style="{StaticResource InteractiveTextBlockStyle}"
                   Cursor="Hand"
                   Content="{Binding CliArgumentsText}"
                   Margin="10,0,0,0"
                   VerticalAlignment="Center"
                   TabIndex="0"
                   MouseDown="CliTextBlock_MouseDown"/>

            <Label x:Name="LicenceFinalLabel"
                   Content="{Binding LicenceFinal}"
                   FontSize="11"
                   VerticalAlignment="Center"
                   Margin="14,0,14,0"
                   Foreground="WhiteSmoke"
                   TabIndex="1"
                   MouseEnter="LicenceFinalLabel_MouseEnter"
                   MouseLeave="LicenceFinalLabel_MouseLeave"/>

            <Button x:Name="CmdOk"
                    Content="Ok"
                    Width="90"
                    Height="20"
                    VerticalAlignment="Center"
                    Margin="0,0,20,0"
                    Padding="0"
                    Click="CmdOk_Click"
                    DockPanel.Dock="Right"
                    IsDefault="True"
                    IsCancel="True"
                    TabIndex="2"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"/>
        </DockPanel>

    </Grid>

</Window>
