<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Very dark background -->
    <Color x:Key="BackgroundColor">#FF121212</Color>
    <!-- White text foreground -->
    <Color x:Key="ForegroundColor">#FFFFFFFF</Color>
    <!-- Web blue buttons -->
    <Color x:Key="PrimaryColor">#FF2196F3</Color>
    <!-- Disabled buttons -->
    <Color x:Key="DisabledButtonColor">#FF222222</Color>
    <!-- Sky blue accent -->
    <Color x:Key="AccentColor">#FFC9DEF5</Color>
    <!-- Light grey placeholder for dark theme -->
    <Color x:Key="WatermarkColor">#FFB4B4B4</Color>
    <!-- Default outgoing bubble background -->
    <Color x:Key="SentBubbleBackgroundColor">#CC2F3A4A</Color>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="DisabledButtonBrush" Color="{StaticResource DisabledButtonColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="WatermarkBrush" Color="{StaticResource WatermarkColor}" />
    <SolidColorBrush x:Key="SentBubbleBackgroundBrush" Color="{StaticResource SentBubbleBackgroundColor}"/>

</ResourceDictionary>
